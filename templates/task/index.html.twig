{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1> Todas Las Tareas &checkmark; </h1>
    <table>
        <tr>
            <th>Tarea</th>
            <th>Prioridad</th>
            <th>Horas Presupuestadas</th>
            <th>Acciones</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.priority }}</td>
                <td>{{ task.hours }}
                <td>
                    <a href="">Ver</a>
                    <a href="">Editar</a>
                    <a href="">Borrar</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
